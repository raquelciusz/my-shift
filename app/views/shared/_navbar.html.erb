<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <div class="container-fluid justify-content-between">

    <!-- Logo for all devices -->
    <a class="navbar-brand justify-content" href="/#">
      <%= image_tag 'logo-myshift-plane.png', width: "45px", height: "40px", class: 'logo-nav' %>
    </a>

    <% if user_signed_in? %>
      <!-- Avatar for all devices -->
      <div class="nav-item dropdown d-flex align-items-center">
        <%= link_to '', new_request_path, class: "fa-regular fa-calendar-plus navbar-icons", data: { turbo: true, turbo_frame: "modal"} %>
        <%= link_to '', requests_path, class: "fa-solid fa-list-ul navbar-icons", data: { turbo: true, turbo_frame: "modal"} %>

        <% if current_user.avatar.attached? %>
          <%= image_tag current_user.avatar.key, class: "avatar dropdown-toggle avatar-navbar ml-3", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "https://i1.sndcdn.com/avatars-000255771415-dx5rag-t200x200.jpg", class: "avatar dropdown-toggle border border-white ml-3", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <%= link_to "Feed", requests_path, class: "dropdown-item" %>
          <%= link_to "Minhas trocas", exchanges_path, class: "dropdown-item" %>
          <%= link_to "Meu perfil", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Sair", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
        </div>
      </div>
    <% else %>
      <!-- Sign in icon for non-logged in users -->
      <div class="d-flex align-items-center">
        <%= link_to "", new_user_session_path, class: "fa-solid fa-arrow-right-to-bracket navbar-icons" %>
      </div>
    <% end %>
  </div>
</div>
