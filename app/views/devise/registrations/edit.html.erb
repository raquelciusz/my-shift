<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , data: { turbo: false }} ) do |f| %>
  <%= f.error_notification %>
  <%# <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<section class="card-login">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col mt-3">
        <div class="card card-registration card-login my-4">
          <div class="row g-0 avatar-bg">
            <div class="py-2 row align-items-center w-75 m-auto">
              <!--Avatar Upload Field-->
              <div class="col-4">
                <label class="btn avatar-photo mt-4">
                  <% if current_user.avatar.attached? %>
                    <%= image_tag current_user.avatar.key %>
                  <% else %>
                    <%= image_tag "https://randomuser.me/api/portraits/women/49.jpg"%>
                  <% end %>
                  <div class="avatar-edit rounded"><i class="fa-regular fa-pen-to-square"></i> Editar</div>
                  <span style="display:none;">
                    <%= f.file_field :avatar, class: "btn btn-primary" %>
                  </span>
                </label>
              </div>
            <div class="col-4">

            </div>
            <div class="col-4 row">
              <h3>Status da assinatura</h3>
              <% if current_user.orders.present? && current_user.orders.last.state == 'paid' %>
                <p><%= current_user.orders.last.membership.category %></p>
              <% else %>
                 <%= link_to "Assine já", memberships_path, class: "btn btn-primary" %>
              <% end %>
            </div>
              <%= link_to root_path do %>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
              <% end %>
            </div>
            <div class="form-inputs m-auto row p-4 w-75">
              <div class="col-6">
                <%= f.input :first_name,
                            required: false,
                            input_html: { autocomplete: "Nome" },
                            label: 'Nome'%>
              </div>
              <div class="col-6">
                <%= f.input :last_name,
                            required: false,
                            input_html: { autocomplete: "last name" },
                            label: 'Sobrenome'%>
              </div>
              <div class="col-6">
              <%= f.input :cpf,
                          required: false,
                          input_html: { autocomplete: "CPF" },
                          label: 'CPF'%>
              </div>
              <div class="col-6">
              <%= f.input :re,
                          required: false,
                          input_html: { autocomplete: "RE" },
                          label: 'R.E.'%>
              </div>

              <div class="col-6">
              <%= f.input :phone,
                          required: false,
                          input_html: { autocomplete: "phone" },
                          label: 'Telefone'%>
              </div>
              <div class="col-6">
              <%= f.input :email,
                          required: false,
                          input_html: { autocomplete: "email" },
                          label: 'Email'%>
              </div>

              <div class="col-6">
              <%= f.input :password,
                          hint: "Deixe em branco caso não queira alterar a senha.",
                          required: false,
                          input_html: { autocomplete: "new-password" },
                          label: 'Alterar senha' %>
              </div>
              <div class="col-6">
              <%= f.input :password_confirmation,
                          required: false,
                          input_html: { autocomplete: "new-password" },
                          label: 'Confirmar nova senha' %>
              </div>

              <div class="col-6">
                <%= f.input :current_password,
                            hint: "Precisamos da sua senha atual para efetuar as alterações.",
                            required: true,
                            input_html: { autocomplete: "current-password" },
                            label: 'Senha atual',
                            error: "Campo obrigatório" %>
              </div>
              <div class="col-6">
                <%= f.button :submit, "Atualizar", class: 'btn btn-main mt-4 w-100 hover:text-primary rounded-pill shadow-sm border px-4' %>
                <% end %>
              </div>

              <div class="d-flex mt-5 justify-content-flex-start flex-wrap">
                <p class="mt-3">Não está contente?</p>
                <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, class: "btn btn-danger cancelar" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
