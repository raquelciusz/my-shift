<div class="container mt-5 d-flex col align-items-center gap-5">
  <div class="col">
    <h1>Contatar <strong><%= @request.user.first_name.capitalize %></strong></h1>
    <p><strong>Tipo de requisicao: </strong><%= @request.request_type %></p>
    <p><strong>Origem: </strong><%= @request.origin %></p>
    <p><strong>Destino: </strong><%= @request.destination %></p>
    <% if @request.available == true %>
    <%= "Indisponivel" %>
    <% else %>
    <%= "Disponivel" %>
    <% end %>
    <%= link_to "Quero essa escala", request_exchanges_path(@request), data:{ turbo_method: :post}, class: "btn btn-primary" %>
  </div>

  <div class="col">
    <p><strong>Entrar em contato: </strong></p>
    <a class="icone-whatsapp" href="https://wa.me/<%= @request.user.phone %>"><i class="fa-brands fa-whatsapp"></i></a>
  </div>
  <%= link_to "Voltar", requests_path, class: "btn btn-primary"%>
</div>
